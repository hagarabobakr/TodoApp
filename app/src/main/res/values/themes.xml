<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoAppAndroied" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/mintGreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="noActionBar" parent="Theme.TodoAppAndroied">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="toolBarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="actionBarStyle">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="splashColor">
        <item name="android:background">@color/mintGreen</item>
    </style>
    <style name="screenBackground">
        <item name="android:background">@color/mintGreen</item>
    </style>
    <style name="titleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        </style>
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="cardItemsColor">
        <item name="android:background">@color/green</item>
    </style>
    <style name="textCardItem">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="themColor">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="themArrwoBackgroundColor">
        <item name="tint">@color/white</item>
    </style>
    <style name="calendarHeaderStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/elmessiri</item>
    </style>
    <style name="weekDayStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/elmessiri</item>
    </style>
    <style name="dateTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/elmessiri</item>
    </style>
    <style name="editTextFildBackgroundColor">
        <item name="android:background">#00000000</item>
    </style>
    <style name="cardBackgroundColor">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="bottomNavBackgroundColor">
        <item name="android:background">#00000000</item>
    </style>
    <style name="bottomAppBarBackgroundColor">
        <item name="android:backgroundTint">@color/white</item>
    </style>

</resources>